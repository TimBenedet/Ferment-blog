---
interface Props {
  article: {
    title: string;
    slug: string;
    excerpt: string;
    category: string;
    date: string;
  };
}

const { article } = Astro.props;
const base = import.meta.env.BASE_URL;

const categoryColors: Record<string, string> = {
  'Koji': 'bg-[--color-ferment-accent]',
  'Miso': 'bg-[--color-ferment-purple]',
  'Bière': 'bg-amber-500',
  'Zéro Déchet': 'bg-emerald-500',
};

const formatDate = (dateStr: string) => {
  return new Date(dateStr).toLocaleDateString('fr-FR', {
    day: 'numeric',
    month: 'long',
    year: 'numeric'
  });
};
---

<article class="group bg-[--color-ferment-dark] border border-white/5 hover:border-[--color-ferment-accent]/30 transition-all duration-500">
  <!-- Image placeholder with gradient -->
  <div class="aspect-[16/10] bg-gradient-to-br from-[--color-ferment-darker] to-[--color-ferment-dark] relative overflow-hidden">
    <div class="absolute inset-0 flex items-center justify-center">
      <span class="text-6xl opacity-20 group-hover:scale-110 transition-transform duration-500">
        {article.category === 'Koji' && '菌'}
        {article.category === 'Miso' && '味'}
        {article.category === 'Bière' && '麦'}
        {article.category === 'Zéro Déchet' && '循'}
      </span>
    </div>
    <!-- Category badge -->
    <div class="absolute top-4 left-4">
      <span class={`inline-block px-3 py-1 text-xs font-display uppercase tracking-wider text-[--color-ferment-dark] ${categoryColors[article.category] || 'bg-[--color-ferment-accent]'}`}>
        {article.category}
      </span>
    </div>
  </div>

  <!-- Content -->
  <div class="p-6">
    <time class="text-xs text-[--color-ferment-gray] uppercase tracking-wider">
      {formatDate(article.date)}
    </time>
    <h3 class="mt-2 text-xl font-display font-bold text-[--color-ferment-cream] group-hover:text-[--color-ferment-accent] transition-colors">
      <a href={`${base}journal/${article.slug}/`} class="block">
        {article.title}
      </a>
    </h3>
    <p class="mt-3 text-sm text-[--color-ferment-gray] line-clamp-2">
      {article.excerpt}
    </p>
    <a
      href={`${base}journal/${article.slug}/`}
      class="inline-flex items-center gap-2 mt-4 text-sm text-[--color-ferment-accent] font-display uppercase tracking-wider hover:text-[--color-ferment-cream] transition-colors"
    >
      Lire
      <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
    </a>
  </div>
</article>
