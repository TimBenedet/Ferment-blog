---
const navLinks = [
  { href: '/', label: 'Accueil' },
  { href: '/manifeste', label: 'Manifeste' },
  { href: '/journal', label: 'Journal' },
  { href: '/recettes', label: 'Recettes' },
  { href: '/a-propos', label: 'Ã€ propos' },
];

const currentPath = Astro.url.pathname;
---

<header class="fixed top-0 left-0 right-0 z-50 bg-[--color-ferment-dark]/95 backdrop-blur-sm border-b border-white/5">
  <nav class="w-full px-6 lg:px-10">
    <div class="flex items-center justify-between h-20 lg:h-24">
      <!-- Logo -->
      <a href="/" class="group flex items-center gap-2">
        <span class="text-2xl lg:text-3xl font-display font-bold tracking-wider text-[--color-ferment-cream] group-hover:text-[--color-ferment-accent] transition-colors">
          FERMENT<span class="text-[--color-ferment-accent]">.</span>
        </span>
      </a>

      <!-- Desktop Navigation -->
      <ul class="hidden md:flex items-center gap-8 lg:gap-12">
        {navLinks.map(link => (
          <li>
            <a
              href={link.href}
              class:list={[
                "text-sm font-display uppercase tracking-widest transition-colors duration-300",
                currentPath === link.href
                  ? "text-[--color-ferment-accent]"
                  : "text-[--color-ferment-cream]/70 hover:text-[--color-ferment-accent]"
              ]}
            >
              {link.label}
            </a>
          </li>
        ))}
      </ul>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-btn"
        class="md:hidden p-2 text-[--color-ferment-cream] hover:text-[--color-ferment-accent] transition-colors"
        aria-label="Menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="md:hidden hidden pb-6">
      <ul class="flex flex-col gap-4">
        {navLinks.map(link => (
          <li>
            <a
              href={link.href}
              class:list={[
                "block text-sm font-display uppercase tracking-widest py-2 transition-colors duration-300",
                currentPath === link.href
                  ? "text-[--color-ferment-accent]"
                  : "text-[--color-ferment-cream]/70 hover:text-[--color-ferment-accent]"
              ]}
            >
              {link.label}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </nav>
</header>

<!-- Spacer for fixed header -->
<div class="h-20 lg:h-24"></div>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');

  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
